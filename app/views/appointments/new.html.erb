<div class="container">
	<div class="rows">
		<div class="col-md-6 col-md-offset-3">
			<% if flash.any? %>
		      <div class="alert alert-warning alert-dismissible" role="alert">
		        <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button><%= notice %>
		      </div>
		    <% end %>
			<%= render 'form', appointment: @appointment %>
			<br>
			<%= link_to 'Cancel', appointments_path,class:"btn btn-danger"%>
		</div>
	</div>
</div>