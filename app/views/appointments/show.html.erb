<div class="container">
	<p id="notice"><%= notice %></p>

	<p>
	  <strong>Datetime:</strong>
	  <%= @appointment.datetime %>
	</p>

	<p>
	  <strong>Vendor:</strong>
	  <%= @appointment.vendor_id %>
	</p>
	
	<% @timeslot = @appointment.timeslot %>
	<% if @timeslot.present? %>
		<% DockWorker.all.each do |worker| %>
			<% unless worker.timeslots.include?(@timeslot) %>
				<p><%= worker.last_name %></p>
				<p><% render "add_worker",locals:{@worker: worker}%></p>
			<% end %>
		<% end %>
	<% end %>
	<%= link_to 'Edit', edit_appointment_path(@appointment) %> |
	<%= link_to 'Back', appointments_path %>

</div>