<div class="form_div container">
  <p id="notice"><%= notice %></p>

  <h1>Appointments</h1>

  <table class="table table-striped table-bordered table-hover ">
    <thead>
      <tr>
        <th>Datetime</th>
        <th>Vendor</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @appointments.each do |appointment| %>
        <tr>
          <td><%= appointment.datetime.strftime("%b %e,%Y %l:%M %p") %></td>
          <td><%= appointment.vendor.name %></td>
          <td><%= link_to 'Show', appointment,class:"btn btn-success" %></td>
          <td><%= link_to 'Edit', edit_appointment_path(appointment),class:"btn btn-warning" %></td>
          <td><%= link_to 'Destroy', appointment,class:"btn btn-danger", method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Appointment', new_appointment_path,class:"btn btn-primary"  %>
</div>
