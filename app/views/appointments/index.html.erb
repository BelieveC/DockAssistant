<div class="form_div container">
  <% if flash.any? %>
    <div class="alert alert-warning alert-dismissible" role="alert">
      <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button><%= notice %>
    </div>
  <% end %>
  <div class="rows">
    <div class="col-md-12">
      <h2>Appointments</h2>
      <table class="table table-striped table-hover ">
        <thead>
          <tr>
            <th>Datetime</th>
            <th>Vendor</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @appointments.each do |appointment| %>
            <tr>
              <td class="table-tr"><%= appointment.datetime.strftime("%b %e,%Y %l:%M %p") %></td>
              <td class="table-tr"><%= appointment.vendor.name %></td>
              <td class="table-tr"><%= link_to 'Show', appointment,class:"table-btn btn btn-raised btn-success btn-sm" %></td>
              <td><%= link_to 'Edit', edit_appointment_path(appointment),class:"btn btn-sm btn-raised btn-warning table-btn" %></td>
              <td class="table-btn"><%= link_to 'Destroy', appointment,class:"table-btn btn btn-sm btn-raised btn-danger", method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <br>
      <%= link_to 'New Appointment', new_appointment_path,class:"btn btn-raised btn-primary"  %>
    </div>
    <div class="col-md-4 col-md-offset-4">
      <%= will_paginate %>
    </div>
    <div class="col-md-4"></div>
  </div>
</div>
