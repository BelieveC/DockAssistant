<div class="form_div container">
  <p id="notice"><%= notice %></p>

  <h1>States</h1>

  <table class="table table-striped table-bordered table-hover ">
    <thead>
      <tr>
        <th>Name</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @states.each do |state| %>
        <tr>
          <td><%= state.name %></td>
          <td><%= link_to 'Show', state,class:"btn btn-success" %></td>
          <td><%= link_to 'Edit', edit_state_path(state),class:"btn btn-warning" %></td>
          <td><%= link_to 'Destroy', state,class:"btn btn-danger", method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New State', new_state_path,class:"btn btn-primary" %>

</div>