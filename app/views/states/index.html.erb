<div class="form_div container">
  <% if flash.any? %>
    <div class="alert alert-warning alert-dismissible" role="alert">
      <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button><%= notice %>
    </div>
  <% end %>
  <div class="rows">
    <div class="col-md-12">
      <h1>States</h1>

      <table class="table table-striped table-hover ">
        <thead>
          <tr>
            <th>Name</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @states.each do |state| %>
            <tr>
              <td class="table-tr"><%= state.name %></td>
              <td class="table-tr"><%= link_to 'Show', state,class:"btn btn-raised btn-success btn-sm table-btn" %></td>
              <td><%= link_to 'Edit', edit_state_path(state),class:"btn btn-raised btn-warning btn-sm table-btn" %></td>
              <td><%= link_to 'Destroy', state,class:"btn btn-raised btn-danger btn-sm table-btn", method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>

      <br>

      <%= link_to 'New State', new_state_path,class:"btn btn-raised btn-primary" %>
    </div>
    <div class="col-md-4 col-md-offset-4">
      <%= will_paginate %>
    </div>
    <div class="col-md-4"></div>
  </div>

</div>