<div class="container">
  <p id="notice"><%= notice %></p>

  <p>
    <strong>Last name:</strong>
    <%= @dock_worker.last_name %>
  </p>

  <p>
    <strong>First name:</strong>
    <%= @dock_worker.first_name %>
  </p>

  <p>
    <strong>Address:</strong>
    <%= @dock_worker.address %>
  </p>

  <p>
    <strong>State:</strong>
    <%= @dock_worker.state_id %>
  </p>

  <p>
    <strong>Zipcode:</strong>
    <%= @dock_worker.zipcode %>
  </p>

  <p>
    <strong>Pay rate:</strong>
    <%= @dock_worker.pay_rate %>
  </p>

  <p>
    <strong>Archived:</strong>
    <%= @dock_worker.archived %>
  </p>

  <%= link_to 'Edit', edit_dock_worker_path(@dock_worker) %> |
  <%= link_to 'Back', dock_workers_path %>


  <h3>Genarate Reports</h3>

  <%= simple_form_for(:report,{url: dock_worker_report_path,method: :get,remote:true}) do |f| %>
    <%= f.input :start_date,label:"Date",as: :date %>
    <%= f.input :end_date,label:"Date",as: :date %>
    <%= f.submit "Get Report" %>
  <% end %>

  <div id="dock_reports">
    
  </div>
</div>