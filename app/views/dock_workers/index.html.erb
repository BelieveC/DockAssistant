<div class="container form_div"">
  <p id="notice"><%= notice %></p>

  <h1>Dock Workers</h1>

  <table class="table table-striped table-bordered table-hover ">
    <thead>
      <tr>
        <th>Last name</th>
        <th>First name</th>
        <th>Address</th>
        <th>State</th>
        <th>Zipcode</th>
        <th>Pay rate</th>
        <!--<th>Archived</th>-->
        <th colspan="4">Actions</th>
      </tr>
    </thead>

    <tbody>
      <% @dock_workers.each do |dock_worker| %>
        <tr>
          <td><%= dock_worker.last_name %></td>
          <td><%= dock_worker.first_name %></td>
          <td><%= dock_worker.address %></td>
          <td><%= dock_worker.state.try(:name)%></td>
          <td><%= dock_worker.zipcode %></td>
          <td><%= dock_worker.pay_rate %></td>
          <!--<td><%= dock_worker.archived %></td>-->
          <td><%= link_to 'Show', dock_worker,class:"btn btn-success" %></td>
          <td><%= link_to 'Edit', edit_dock_worker_path(dock_worker),class:"btn btn-warning" %></td>
          <td><%= link_to 'Salary Dues', dock_worker_payment_path(dock_worker),class:"btn btn-primary",remote: true %></td>
          <td><%= link_to 'Destroy', dock_worker,class:"btn btn-danger", method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Dock Worker', new_dock_worker_path,class:"btn btn-primary"  %>

  <div class="rows">
    <div class="col-md-5 col-md-offset-1">
        <h3>Generate Report</h3>
        <%= simple_form_for(:report,{url: dock_worker_report_path,method: :get,remote:true}) do |f| %>
          <%= f.input :id,label:"Dock Worker",collection: DockWorker.all,label_method: :first_name,value_method: :id,prompt:"Select Dock Worker" %>
          <%= f.input :start_date,label:"Start Date",as: :date %>
          <%= f.input :end_date,label:"End Date",as: :date %>
          <%= f.submit "Get Report",class: "btn btn-danger" %>
        <% end %>
    </div>
    <div class="col-md-5 col-md-offset-1">
        <h3>Average worker payroll per appointment</h3>
        <%= simple_form_for(:report,{url:avg_payroll_path,method: :get,remote:true}) do |f| %>
          <%= f.input :start_date,label:"Start Date",as: :date %>
          <%= f.input :end_date,label:"End Date",as: :date %>
          <%= f.submit "Get Avg Payroll",class: "btn btn-danger" %>
        <% end %>
    </div>
    <div id="dock_reports"> </div>
      <div id="dock_worker_report_end"></div>
    <div id="average_payroll"></div>
    <div id="average_payroll_end"></div>
  </div>
  <div id="dock_worker_payment"></div>
  <div id="dock_worker_payment_end"></div>

</div>